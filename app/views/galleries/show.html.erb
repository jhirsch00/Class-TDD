<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @gallery.title %>
</p>

<p>
  <b>User:</b>
  <%= @gallery.user_id %>
</p>

<% @gallery.photos.each do |photo| %>
  <%= link_to image_tag(photo.image.url(:thumb)), [@gallery, photo], :title => photo.title %>
<% end %>

<%= link_to 'New Image', new_gallery_photo_path(@gallery) %>
<%= link_to 'Edit', edit_gallery_path(@gallery) %> |
<%= link_to 'Back', galleries_path %>